{
    "compilerOptions": {
        "target": "es6",
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [
            "es2021",
            "dom",
            "dom.iterable"
        ],
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types",
            "@types"
        ],
        "resolveJsonModule": true
    },
    "include": [
        "next-env.d.ts",
        "src/**/*",
        "bin/**/*",
        "fixture/**/*",
        "@types/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.tsx"
    ],
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "compilerOptions": {
            "target": "esnext",
            "module": "commonjs",
        }
    }
}
